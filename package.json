{
  "name": "transcripts",
  "productName": "transcripts",
  "version": "1.0.0",
  "description": "A simple Electron app to fetch YouTube transcripts",
  "main": "src/index.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "keywords": [],
  "author": {
    "name": "Zyztem",
    "email": "me@zyztem.dev"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zyztem/youtube-transcript-fetcher.git"
  },
  "license": "MIT",
  "dependencies": {
    "electron-squirrel-startup": "^1.0.1",
    "youtube-transcript": "^1.2.1"
  },
  "devDependencies": {
    "electron-builder": "^26.0.12",
    "electron": "^35.1.2"
  },
  "build": {
    "appId": "dev.zyztem.youtube-transcript-fetcher",
    "productName": "transcripts",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "package.json"
    ],
    "win": {
      "target": "msi"
    },
    "mac": {
      "target": "dmg",
      "category": "public.app-category.utilities"
    },
    "linux": {
      "target": "deb"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "zyztem",
        "repo": "youtube-transcript-fetcher"
      }
    ]
  }
}
